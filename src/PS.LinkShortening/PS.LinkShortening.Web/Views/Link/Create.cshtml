@model LinkCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Link</h4>
<hr />


<div class="my-5">
    <form  asp-controller="Link" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row col-12 mb-3">

            <div class="row col-6 form-group mx-1">
                <input asp-for="Url" class="form-control text-center" placeholder="Link"/>
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

            <div class="row col-2 form-group ">
                 <input class="btn btn-outline-primary" type="submit" value="Shorting Link" />
            </div>
        </div>
    </form>
</div>


<div class="text-center">
	@if (!string.IsNullOrEmpty(Model.ErrorMessage))
	{
		<p>
			<div class="alert alert-danger" role="alert">
				@Model.ErrorMessage
			</div>
		</p>
	}
	else
	{
		<p>
			@Model.Text<br />
			@if (!string.IsNullOrEmpty(Model.Url))
			{
				<a href="@Model.Url" target="_blank">@Model.Url</a>
			}
		</p>
	}
</div>



<div class="form-group btn-group mt-2">
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
